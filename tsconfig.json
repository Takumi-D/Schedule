{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "es5",
    "lib": [
      "DOM",
      "ES2015.Core"
    ],
    "downlevelIteration": true,
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "types": ["@types/node-fetch"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "webpack-common.js",
    "webpack-dev.js",
    "webpack-prod.js"
  ]
}